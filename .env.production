# RíoClaro Production Environment Configuration
# IMPORTANT: Update all values before deploying to production!

# Environment
DJANGO_ENVIRONMENT=production
NODE_ENV=production

# Security Settings - CHANGE THESE!
SECRET_KEY=CHANGE_THIS_SECRET_KEY_FOR_PRODUCTION_USE_MINIMUM_50_CHARS
DEBUG=False

# Database Configuration (Production - MySQL/PostgreSQL recommended)
DB_ENGINE=django.db.backends.mysql
DB_NAME=rioclaro_prod
DB_USER=rioclaro_user
DB_PASSWORD=CHANGE_THIS_STRONG_DATABASE_PASSWORD
DB_HOST=mysql
DB_PORT=3306

# For PostgreSQL (recommended for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=rioclaro_prod
# DB_USER=rioclaro_user
# DB_PASSWORD=STRONG_PRODUCTION_PASSWORD
# DB_HOST=postgres
# DB_PORT=5432

# Allowed Hosts (Update with your domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# CORS Configuration (Restrictive for production)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
VITE_API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Email Configuration (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.youremailprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=Sistema RíoClaro <noreply@yourdomain.com>

# Redis Configuration (Production)
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging Level
LOG_LEVEL=INFO

# Data Source for Production
DATA_SOURCE=API

# Session Configuration (Production - More secure)
SESSION_TIMEOUT_MINUTES=480   # 8 hours
SESSION_COOKIE_AGE=28800      # 8 hours
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# Password Policy (Strict for production)
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SYMBOLS=True
PASSWORD_HISTORY_COUNT=5
PASSWORD_FORCE_CHANGE_DAYS=90

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_BACKUP_ENCRYPTION_KEY

# Security Headers (Enabled for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Admin Configuration (Obfuscated for security)
ADMIN_URL=rioclaro-admin-secure-path/

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Static Files Configuration
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# SSL/TLS Configuration
USE_TLS=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Rate Limiting
RATE_LIMIT_ENABLED=True
LOGIN_RATE_LIMIT=5/min
API_RATE_LIMIT=100/min

# Audit Configuration
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=365