# Production Environment Configuration
# Update all values with your production settings

# Django Environment
DJANGO_ENVIRONMENT=production

# Security Settings - MUST BE CHANGED
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-IN-PRODUCTION
DEBUG=False

# Database Configuration - PostgreSQL recommended for production
DATABASE_URL=postgres://user:password@localhost:5432/rioclaro_production

# Allowed Hosts - MUST BE CONFIGURED
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# CORS Configuration - MUST BE RESTRICTIVE
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.yourmailservice.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin Configuration
ADMIN_URL=secure-admin-path/

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Frontend URL
FRONTEND_URL=https://yourdomain.com